<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d9d9d9"
    android:orientation="vertical"
    android:contentDescription="backReturn">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc">

        <ImageButton
            android:id="@+id/returnDash"
            android:clickable="true"
            android:background="@drawable/click2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="TODO"
            android:padding="14dp"
            android:src="@drawable/back_btn"
            app:tint="@color/black" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bebas"
            android:text="Settings"
            android:textColor="#000000"
            android:textSize="30sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:fontFamily="@font/bebas"
                android:text="A I O"
                android:textColor="#000000"
                android:textSize="100dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="CYBER 6"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="20dp"
                android:background="#701d1d1d"
                android:src="@drawable/round_back_white10_20"
                android:orientation="vertical"
                android:padding="15dp">

                <!-- Send Feedback -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/messageIcon"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@color/send_feedback"
                        android:clickable="true"
                        android:contentDescription="@string/Location"
                        android:padding="12dp"
                        android:src="@drawable/message_icon" />

                    <TextView
                        android:id="@+id/sendFeedbackText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/messageIcon"
                        android:clickable="true"
                        android:minHeight="48dp"
                        android:text="Send Feedback"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/sendFeedbackButton"
                        android:layout_width="40dp"
                        android:layout_height="50sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/click"
                        android:clickable="true"
                        android:src="@drawable/right_arrow_icon"
                        app:tint="#fff"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
                </RelativeLayout>




                <!-- About Us -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/about_us_Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/about_us"
                        android:padding="12dp"
                        android:src="@drawable/about_app" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/about_us_Icon"
                        android:text="About Us"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/buttonAu"
                        android:layout_width="40dp"
                        android:layout_height="50sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/click"
                        android:clickable="true"
                        android:src="@drawable/right_arrow_icon"
                        app:tint="#fff"
                        tools:ignore="TouchTargetSizeCheck" />
                </RelativeLayout>

                <!-- About App -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/about_app_Icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/about_app"
                        android:padding="12dp"
                        android:src="@drawable/about_us_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp"
                        android:layout_toEndOf="@+id/about_app_Icon"
                        android:text="About App"
                        android:textColor="#fff"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/bottonAa"
                        android:layout_width="40dp"
                        android:layout_height="50sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/click"
                        android:clickable="true"
                        android:src="@drawable/right_arrow_icon"
                        app:tint="#fff"
                        tools:ignore="TouchTargetSizeCheck" />
                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <!-- LinearLayout with BottomNavigationView -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="#cccccc"
            android:src="@drawable/click"
            app:menu="@menu/bottom_nav_menu"
            android:layout_gravity="bottom"
            app:itemTextColor="@drawable/icon_tint_selector"
            app:itemIconTint="@drawable/icon_tint_selector" />


    </LinearLayout>
    
</LinearLayout>

